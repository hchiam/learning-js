{
  "name": "learning-js",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "test": "jest --bail --findRelatedTests *.test.js",
    "test1": "echo 'might need to chmod +x testSpecificJsTest.sh first if this fails:\n'; ./testSpecificJsTest.sh",
    "fuzz": "JAZZER_FUZZ=1 jest --testRunner=\"@jazzer.js/jest-runner\" --testMatch=\"<rootDir>/**/*.fuzz.js\"",
    "fuzz_regression": "JAZZER_FUZZ=0 jest --testRunner=\"@jazzer.js/jest-runner\" --testMatch=\"<rootDir>/**/*.fuzz.js\"",
    "lint": "prettier --write *.{js,css,html,scss,json,md,ts,tsx}",
    "deploy:bookmarklet-generator": "rm -rf bookmarklets/bookmarklet-generator/.cache; rm -rf bookmarklets/bookmarklet-generator/dist; surge bookmarklets/bookmarklet-generator https://hchiam-bookmarklet-generator.surge.sh",
    "deploy": "surge random-js-note https://random-js-note.surge.sh/; open https://random-js-note.surge.sh/"
  },
  "dependencies": {
    "@datastructures-js/priority-queue": "6.3.0"
  },
  "devDependencies": {
    "eslint": "^6.4.0",
    "eslint-config-google": "^0.14.0",
    "husky": "^4.3.0",
    "jest": "^29.7.0",
    "jest-cli": "^29.7.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "testEnvironment": "node"
  },
  "lint-staged": {
    "**/*.js": [
      "npm run test"
    ],
    "*.{js,css,html,scss,json,md,ts,tsx}": "prettier --write"
  }
}
